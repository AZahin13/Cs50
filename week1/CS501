//first c code from cs50
#include <stdio.h>//represents libraries
#include <cs50.h>

int main(void)
{
    // string here is to obtain words, name is the "return value"
    string name = get_string("What's your name? \n");
    printf("Hello, %s\n", name); //%s here is a placeholder, where name the return value will be displayed

    //in this line I learn to implement conditionals and booleans
    //conditionals help make decisions
    //booleans set up true or false statements
    printf("%s, kindly provide 2 numbers for me to compare\n", name);
    int x = get_int("Give me your first number:\n");
    int y = get_int("Give me your second number:\n");
    if (x>y)
    {
        printf("%i is greater than %i!\n", x,y);
    }
    else if (x<y)
    {
        printf("%i is less than %i!\n", x,y);
    }
        else
    {
        printf("%i is equivalent to %i!\n", x,y);
    }
}
